@model IEnumerable<LifePlanner.Models.Jelo>

@{
    ViewData["Title"] = "Sva jela";
}

<h1>Sva jela</h1>

<p>
    <a asp-action="Create">Kreiraj novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>        
            <th>
                @Html.DisplayNameFor(model => model.Sastojci)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>           
            <td>
                <table>
                    @for (int i = 0; i < item.Sastojci.Count; i++)
                    {
                        @:<tr>
                            @item.Sastojci[i]
                        @:</tr></br>
                    }
                </table>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Opis</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
