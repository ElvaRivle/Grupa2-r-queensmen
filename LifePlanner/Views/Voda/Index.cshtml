@model LifePlanner.Models.Voda
@{ 
    ViewData["Title"] = "Voda";
    Layout = "_layout";
}

<h1 style="text-align: center;">Kalendar za vodu</h1>
<hr/>

<div id="glavno">
    <div class="calendar light">
        <div class="calendar-header">
            <span class="month-picker" id="month-picker">February</span>
            <div class="year-picker">
                <span class="year-change" id="prev-year">
                    <pre><</pre>
                </span>
                <span id="year">2021</span>
                <span class="year-change" id="next-year">
                    <pre>></pre>
                </span>
            </div>
        </div>
        <div class="calendar-body">
            <div class="calendar-week-day">
                <div>Ned</div>
                <div>Pon</div>
                <div>Uto</div>
                <div>Sri</div>
                <div>Čet</div>
                <div>Pet</div>
                <div>Sub</div>
            </div>
            <div class="calendar-days"></div>
        </div>
        <div class="calendar-footer">
        </div>
        <div class="month-list"></div>
    </div>


    @if (Model == null)
    {
        @:
        <form asp-action="Create" method="POST">
            <input type="datetime" name="Datum" value="@ViewBag.datumFull" hidden />
            <p>
                Na dan @ViewBag.datum popio/la sam:
                <input type="number" name="Kolicina" value="0" min="0"/>
                litara vode!
            </p>
            <input type="submit" value="Spasi" />
            @Html.AntiForgeryToken()
        </form>
    }
    else
    {
        @: 
            <form asp-action="Edit" method="POST">
            <input type="text" name="id" value="@Model.Id" hidden />
            <input type="datetime" name="Datum" value="@ViewBag.datumFull" hidden />
            <p>
                Na dan @ViewBag.datum popio/la sam:
                <input type="number" name="Kolicina" value="@Model.Kolicina" min="0"/>
                litara vode!
            </p>
            <input type="submit" value="Spasi" />
            @Html.AntiForgeryToken()
            </form>
    }

</div>

@section Scripts {
    <script src="~/js/kalendar.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/kalendar.css" />
}