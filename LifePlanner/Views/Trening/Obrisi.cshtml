@model LifePlanner.Models.Trening

@{
    ViewData["Title"] = "Brisanje treninga";
}

<h1>Brisanje treninga</h1>

<h3>Jeste li sigurni da želite obrisati ovaj trening?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vjezbe)
        </dt>
        <dd class="col-sm-10">
            <table>
                @foreach (string vjezba in Model.Vjezbe)
                {
                    if (vjezba.Length == 0) continue;
                    <tr style="">@vjezba</tr><br/>
                }
            </table>
        </dd>
    </dl>
    
    <form asp-action="Obrisi">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad na listu</a>
    </form>
</div>
