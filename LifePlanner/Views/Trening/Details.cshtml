@model LifePlanner.Models.Trening

@{
    ViewData["Title"] = "Opis treninga";
}

<h1>Opis treninga</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vjezbe)
        </dt>
        <dd class = "col-sm-10">
            <table>
                @for (int i = 0; i < Model.Vjezbe.Count; i++)
                {
                    @:<tr>
                    @Model.Vjezbe[i]
                    @:</tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Uredi</a> |
    <a asp-action="Index">Nazad na listu</a>
</div>
