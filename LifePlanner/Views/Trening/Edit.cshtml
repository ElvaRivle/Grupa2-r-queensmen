@model LifePlanner.Models.Trening

@{
    ViewData["Title"] = "Uređivanje treninga";
}

<h1>Uređivanje treninga</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <button onclick="addRow()" type="button">Dodaj vježbu</button>
            </br>
            <table id="VjezbeTabela">
                @for (int i = 0; i < Model.Vjezbe.Count; i++)
                {
                    @:<tr>
                        @:<input type="text" name="Vjezbe[@i]" value="@Model.Vjezbe[i]"/>
                        @:<input type="button" id="Vjezbe[@i]" onclick="obrisi(this)" value="Obrisi" /">
                    @:</tr>
                }
            </table>
            <div class="form-group">
                <input type="submit" value="Spasi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
        window.counter = @Model.Vjezbe.Count;
</script>
<script src="~/js/tabelaZaUnos.js"></script>
}
