@model IEnumerable<LifePlanner.Models.Zadatak>

@{
    ViewData["Title"] = "Index";
    Layout = "_layout";
}

<div id="glavno">
    <div id="zadaci">
        <h2>Zadaci</h2>
        @foreach(var item in Model)
            {
        <form asp-action="Delete" method="POST">
            <p class="@item.Naziv">
                @item.Naziv
                <input type="hidden" name="id" value="@item.Id" style="display: inline;">
                <input type="submit" value="Završi zadatak" style="display: inline;" />
            </p>
            @Html.AntiForgeryToken()
        </form>
            }
        <form asp-action="Create" method="POST">
            <input type="text" name="Naziv" />
            <input type="datetime" name="Datum" value="@ViewBag.datum" hidden/>
            <input type="submit" value="Dodaj zadatak" />
            @Html.AntiForgeryToken()
        </form>
    </div>


    <div class="calendar light">
        <div class="calendar-header">
            <span class="month-picker" id="month-picker">February</span>
            <div class="year-picker">
                <span class="year-change" id="prev-year">
                    <pre><</pre>
                </span>
                <span id="year">2021</span>
                <span class="year-change" id="next-year">
                    <pre>></pre>
                </span>
            </div>
        </div>
        <div class="calendar-body">
            <div class="calendar-week-day">
                <div>Sun</div>
                <div>Mon</div>
                <div>Tue</div>
                <div>Wed</div>
                <div>Thu</div>
                <div>Fri</div>
                <div>Sat</div>
            </div>
            <div class="calendar-days"></div>
        </div>
        <div class="calendar-footer">
        </div>
        <div class="month-list"></div>
    </div>
</div>


@section Scripts {
    <script src="~/js/kalendar.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/kalendar.css" />
    <link rel="stylesheet" href="~/css/zadaci.css" />
}
